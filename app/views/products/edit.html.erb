<% provide(:title, "Edit Product") %> 
<h1>Edit <%= "#{@product.item_number}" %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@product) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'back to All Products', products_path %>