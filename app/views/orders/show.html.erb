<p id="notice"><%= notice %></p>

<p>
  <b>Number:</b>
  <%= @order.number %>
</p>

<p>
  <b>Date:</b>
  <%= @order.date %>
</p>

<p>
  <b>User:</b>
  <%= @order.user_id %> (<%= @order.user.name %>)
</p>

<ol>
  <% for line_item in @order.line_items %>
  <li><%= line_item.product.item_number %></li>
  <li><%= line_item.product.description %></li>
  <li><%= line_item.quantity %></li>
  <li><%= line_item.free %></li>
  <% end %>
</ol>


<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
