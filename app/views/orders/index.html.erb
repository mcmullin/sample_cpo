<h1>Listing orders</h1>

<table id="orders" class="table table-striped table-bordered">
  <tr>
    <th></th>
    <th>Number</th>
    <th>Date</th>
    <th>User</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td>
      <%= link_to 'Show', order %> |
      <%= link_to 'Edit', edit_order_path(order) %> |
      <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
    <td><%= order.number %></td>
    <td><%= order.date %></td>
    <td><%= order.user_id %> (<%= order.user.name %>)</td>
  </tr>
<% end %>
</table>

