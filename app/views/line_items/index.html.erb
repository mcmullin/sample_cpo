<h1>Listing line_items</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Order</th>
    <th>Product</th>
    <th>Quantity</th>
    <th>Free</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @line_items.each do |line_item| %>
  <tr>
    <td><%= line_item.order.number %></td>
    <td><%= line_item.product.item_number %> (<%= line_item.product.description %>)</td>
    <td><%= line_item.quantity %></td>
    <td><%= line_item.free %></td>
    <td><%= link_to 'Show', line_item %></td>
    <td><%= link_to 'Edit', edit_line_item_path(line_item) %></td>
    <td><%= link_to 'Destroy', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

